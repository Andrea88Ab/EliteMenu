@model EliteMenu.Models.Ristoranti

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dettagli Ristorante";
}

<style>
    .bg-dark-custom {
        background-color: #343a40; 
        color: #fff; 
    }

    .card-custom {
        border: none;
        border-radius: 0.25rem;
    }

    .card-img-top-custom {
        height: 400px; 
        object-fit: cover; 
        width: 100%;
    }

    .btn-custom {
        margin-right: 10px; 
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark-custom card-custom">
                @if (Model.Foto != null)
                {
                    <img src="@Url.Content(Model.Foto)" alt="Immagine Ristorante" class="card-img-top card-img-top-custom">
                }
                else
                {
                    <img src="@Url.Content("~/images/default-restaurant.jpg")" alt="Immagine predefinita" class="card-img-top card-img-top-custom">
                }
                <div class="card-body">
                    <h5 class="card-title">@Model.Nome</h5>
                    <p class="card-text">@Model.Descrizione</p>
                    <ul class="list-group list-group-flush text-white-custom">
                        <li class="list-group-item bg-dark-custom"><strong>Indirizzo:</strong> @Model.Indirizzo</li>
                        <li class="list-group-item bg-dark-custom"><strong>Telefono:</strong> @Model.Telefono</li>
                        <li class="list-group-item bg-dark-custom"><strong>Email:</strong> @Model.Email</li>
                    </ul>
                    <div class="mt-3">
                        <a href="@Url.Action("Edit", new { id=Model.RistoranteID })" class="btn btn-primary btn-custom">Modifica</a>
                        <a href="@Url.Action("Delete", new { id=Model.RistoranteID })" class="btn btn-danger btn-custom">Elimina</a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Torna all'Elenco</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
