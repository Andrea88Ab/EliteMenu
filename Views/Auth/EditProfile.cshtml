@model EliteMenu.Models.ProfileEditViewModel

<style>

    .avatar {
        width: 150px; /* Adjust size as needed */
        height: 150px; /* Adjust size as needed */
        border-radius: 50%; /* Creates the circle shape */
        border: 3px solid #ccc; /* Optional: adds a border around the image */
        margin-bottom: 20px;
    }

    .btn-edit {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #a67c00;
        color: white;
        font-weight: bold;
        cursor: pointer;
        margin-top: 25px;
    }

        .btn-edit:hover {
            background-color: #a67c00;
            color: black;
        }
</style>

@using (Html.BeginForm("EditProfile", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   <div class="profile-container" style="display: flex; flex-direction: column; align-items: center; background-color: #261919; border-radius: 20px; max-width: 400px; padding: 25px; box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75); margin-left: auto; margin-right: auto; ">


       @Html.AntiForgeryToken()
       <div style="display:flex;justify-content:center;"><img class="avatar" src="@Url.Content(Model.Avatar)" alt="Profilo di @Model.Nome" /></div>


       @Html.LabelFor(model => model.Nome, new { @style = "margin-bottom:10px;" })

       @Html.TextBoxFor(m => m.Nome, new { @style = "margin-bottom:25px;" })

       @Html.LabelFor(m => m.Email, new { @style = "margin-bottom:10px;" })
       @Html.TextBoxFor(m => m.Email, new { @style = "margin-bottom:25px;" })
       <div style="display: flex; flex-direction: column; align-items: center;">
           <label for="AvatarFile">Avatar</label>
           <input type="file" name="AvatarFile" id="AvatarFile" />
       </div>

       <input class="btn-edit" style="margin-top:20px;" type="submit" value="Salva Modifiche"  />
   </div>
}

