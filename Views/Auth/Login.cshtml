@model EliteMenu.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<style>
   

    

        

    
    

    .checkbox {
        margin-bottom: 20px;
    }

    .btn-login {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #bf953f;
        color: white;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-login:hover {
            background-color: #a67c00;
            color: black;
        }
</style>

<div class="login-container">
    <div class="container" style="display: flex; flex-direction: column; align-items: center; background-color: #0000003d; border-radius: 20px; max-width: 400px; padding: 25px; box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75); ">
        <h2>Accesso</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()


            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Inserisci il tuo indirizzo email" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Inserisci la tua password" })
            </div>

            <div class="form-group checkbox">
                <input class="form-check-input" type="checkbox" id="keepLogged" name="keepLogged">
                <label class="form-check-label fw-bold ms-1" for="keepLogged">
                    Mantienimi connesso
                </label>
            </div>

            <button type="submit" class="btn-login">Login</button>
           
            @Html.ActionLink("Sign up", "Register", "Auth", null, new { @class = "btn-login", style = "text-decoration-line: none; display: block; text-align: center; margin-top: 25px;" });

        }

    </div>
</div>


