@model EliteMenu.Models.Menu

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Elimina Menu";
}

<div class="login-container">
    <div class="login-form">

        <h2>Elimina Menu</h2>

        <h3>Sei sicuro di voler eliminare il seguente menu?</h3>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.Nome)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Nome)
        </div>

        

        @using (Html.BeginForm("DeleteMenu", "GestioneMenu", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="id" value="@Model.MenuID" />
            <input type="submit" value="Elimina" class="btn btn-danger" />
            @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>
